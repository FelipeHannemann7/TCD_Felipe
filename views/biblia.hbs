    <script type="text/javascript" src="https://www.iguga.org/js/igpostmessage.js"></script>
    <script type="text/javascript">
        window.onload = function()
        {
            var ContainerBiblia = document.getElementById("ContainerBiblia");
             
            if (typeof ContainerBiblia !== "undefined" && ContainerBiblia !== null) {
                var CustoLink = 'https://www.iguga.org/bible/searchFrame/ID/1612dca508867f6102edca7d9175281a';
          
                var FramSource = CustoLink + '?fromUrl=' + encodeURIComponent(document.location.href);
                 
                ContainerBiblia.innerHTML = '<iframe id="iGugaBibleFrame" src="' + FramSource + '" style="height: 1000px; width: 100%;" scrolling="no" frameborder="0" allowtransparency="true"></iframe>';
            }
        }
        igPostMessage.receiveMessage(function(event)
        {
            if ((!isNaN(event.data)) && (event.data > 0))
            {
                var BibliaFrame = document.getElementById("BibliaFrame");
                 
                if (typeof BibliaFrame !== "undefined" && BibliaFrame !== null) {
                    BibliaFrame.style.height = '100%';
                    ContainerBiblia.style.height = event.data + 'px';
                }
            }
        }, 'https://www.iguga.org');
    </script>
